{
  "name": "react-starter-kit",
  "version": "0.0.0",
  "author": "Xiaofan Wu (https://github.com/xiaofan2406)",
  "description": "A simple boilerplate for starting new React projects.",
  "keywords": [
    "react",
    "react-router",
    "babel",
    "webpack",
    "eslint",
    "prettier",
    "progressive web app"
  ],
  "repository": "xiaofan2406/react-starter-kit",
  "bugs": {
    "url": "https://github.com/xiaofan2406/react-starter-kit/issues"
  },
  "license": "MIT",
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "precommit": "lint-staged",
    "lint:eslint": "eslint -c .eslintrc.js src",
    "lint:prettier": "prettier-check src/**/*.js",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "dev":
      "NODE_ENV=development webpack-dev-server --config ./config/webpack.dev.js",
    "test": "NODE_ENV=test jest --watch --updateSnapshot",
    "coverage": "NODE_ENV=test jest --coverage",
    "prebuild": "npm run lint && rm -rf ./dist",
    "build": "NODE_ENV=production webpack --config ./config/webpack.prod.js",
    "start": "NODE_ENV=production node ./config/test-prod-server"
  },
  "lint-staged": {
    "*.{js,json,css}": ["prettier --write", "git add"]
  },
  "prettier": {
    "singleQuote": true
  },
  "jest": {
    "collectCoverageFrom": ["src/**/*.js"],
    "setupFiles": [
      "<rootDir>/config/jest/rafPolyfill.js",
      "<rootDir>/config/jest/enzymeAdapter.js",
      "<rootDir>/config/polyfills.js"
    ],
    "testMatch": ["<rootDir>/src/**/__tests__/**/*.js"],
    "testEnvironment": "jsdom",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "moduleNameMapper": {
      "^assets(.*)$": "<rootDir>/src/assets$1",
      "^components(.*)$": "<rootDir>/src/components$1",
      "^configs(.*)$": "<rootDir>/src/configs$1",
      "^hocs(.*)$": "<rootDir>/src/hocs$1",
      "^styles(.*)$": "<rootDir>/src/styles$1",
      "^utils(.*)$": "<rootDir>/src/utils$1",
      "^widgets(.*)$": "<rootDir>/src/widgets$1"
    },
    "transformIgnorePatterns": ["[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"],
    "moduleFileExtensions": ["js", "json"],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/utils/compose.js",
      "<rootDir>/src/utils/serviceWorker.js",
      "index.js"
    ]
  },
  "dependencies": {
    "emotion": "^8.0.8",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-emotion": "^8.0.8",
    "react-router-dom": "^4.2.2"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-jest": "^21.2.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-dynamic-import-node": "^1.1.0",
    "babel-plugin-emotion": "^8.0.6",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-plugin-transform-react-jsx-self": "^6.22.0",
    "babel-plugin-transform-react-jsx-source": "^6.22.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.10",
    "babel-plugin-transform-regenerator": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^0.28.7",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.0.2",
    "enzyme-to-json": "^3.1.4",
    "eslint": "^4.9.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.6.0",
    "eslint-import-resolver-webpack": "^0.8.3",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "extract-text-webpack-plugin": "^3.0.1",
    "file-loader": "^1.1.5",
    "filemanager-webpack-plugin": "^1.0.8",
    "html-webpack-plugin": "^2.30.1",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "json-loader": "^0.5.7",
    "lint-staged": "^4.2.3",
    "object-assign": "^4.1.1",
    "prettier": "^1.7.4",
    "prettier-check": "^2.0.0",
    "promise": "^8.0.1",
    "prop-types": "^15.6.0",
    "react-hot-loader": "^3.1.1",
    "react-test-renderer": "^16.0.0",
    "serve": "^6.3.1",
    "style-loader": "^0.19.0",
    "sw-precache-webpack-plugin": "^0.11.4",
    "url-loader": "^0.6.2",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.2",
    "webpack-manifest-plugin": "^1.3.2",
    "whatwg-fetch": "^2.0.3"
  }
}
